<UserControl x:Class="DllCopy.View.ToolBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DllCopy.View"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             MouseMove="PnMouseMove"
             MouseDown="ToolBarControl_OnMouseDown">
    <Border Padding="10" Background="DarkOrange" BorderThickness="1" CornerRadius="0,0,4,4">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <TextBlock Text="DllCopy"
                           Foreground="Black"
                           FontSize="18" />
            </Grid>
            <Grid Grid.Column="1" />
        </Grid>
    </Border>
</UserControl>